<h1><%= _('In the News') %></h1>

<p>
  <% if @resource.is_a?(InfoRequestBatch) %>
    <%= _('Has this batch request been referenced in a news article or ' \
          'academic paper? Let us know:') %>
  <% else %>
    <%= _('Has this request been referenced in a news article or academic ' \
          'paper? Let us know:') %>
  <% end %>
</p>

<%= form_for @citation,
  url: url_for(action: 'create', **params.permit(:resource, :url_title, :info_request_batch_id)),
  class: 'form form-horizontal' do |f| %>
  <%= foi_error_messages_for :citation %>

  <p>
    <%= f.label :source_url, _('Source URL:'), class: 'form_label' %>

    <%= f.url_field :source_url %>

    <div class="form_item_note">
      <%= _('The URL where you found the article.') %>
    </div>
  </p>

  <p>
    <span class="form_item_note">
      <%= _('What type of article is it?') %>
    </span>

    <label for="citation_type_journalism" class="form_label">
      <%= f.radio_button :type, 'journalism' %>
      <%= _('Journalism') %>
    </label>

    <label for="citation_type_campaigning" class="form_label">
      <%= f.radio_button :type, 'campaigning' %>
      <%= _('Campaigning') %>
    </label>

    <label for="citation_type_academic" class="form_label">
      <%= f.radio_button :type, 'academic' %>
      <%= _('Academic') %>
    </label>

    <label for="citation_type_other" class="form_label">
      <%= f.radio_button :type, 'other' %>
      <%= _('Other') %>
    </label>
  </p>

  <% if @resource.is_a?(InfoRequest) && @resource.info_request_batch_id %>
    <p>
      <label for="applies_to_batch_request" class="form_label">
        <%= check_box_tag :applies_to_batch_request, true,
                          @citation.applies_to_batch_request? %>
        <%= _('The article references all requests in this batch') %>
      </label>
    </p>
  <% end %>

  <div class="form_button">
    <%= submit_tag _('Submit'), class: 'button' %>
  </div>
<% end %>
